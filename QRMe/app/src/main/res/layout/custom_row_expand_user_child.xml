<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:id="@+id/email_layout"
        android:layout_width="fill_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_expand_child_email"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_expand_child_email"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/iv_expand_child_email"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/email_layout"
        android:id="@+id/facebook_layout"
        android:layout_width="fill_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_expand_child_facebook"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_expand_child_facebook"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/iv_expand_child_facebook"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/facebook_layout"
        android:id="@+id/twitter_layout"
        android:layout_width="fill_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_expand_child_twitter"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_expand_child_twitter"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/iv_expand_child_twitter"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/twitter_layout"
        android:id="@+id/linkdin_layout"
        android:layout_width="fill_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_expand_child_linkdin"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_expand_child_linkdin"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/iv_expand_child_linkdin"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/linkdin_layout"
        android:id="@+id/phone_layout"
        android:layout_width="fill_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_expand_child_phone"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_expand_child_phone"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/iv_expand_child_phone"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>